@model BookViewModel

<h1 class="mb-4">Edytuj książkę</h1>

<form asp-action="Edit" asp-controller="Books" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="BookId" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Isbn13" class="form-label"></label>
        <input asp-for="Isbn13" class="form-control" />
        <span asp-validation-for="Isbn13" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumPages" class="form-label"></label>
        <input asp-for="NumPages" type="number" class="form-control" />
        <span asp-validation-for="NumPages" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PublicationDate" class="form-label"></label>
        <input asp-for="PublicationDate" type="date" class="form-control" />
        <span asp-validation-for="PublicationDate" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Anuluj</a>
    </div>
</form>